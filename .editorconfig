###
## EditorConfig (http://EditorConfig.org)
###

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true

[COMMIT_EDITMSG]
max_line_length = 0
